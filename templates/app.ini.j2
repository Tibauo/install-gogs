APP_NAME = Gogs
RUN_USER = {{ gogs_user }}
RUN_MODE = prod

[database]
DB_TYPE  = sqlite3
HOST     = 127.0.0.1:3306
NAME     = gogs
USER     = root
PASSWD   = 
SSL_MODE = disable
PATH     = {{ folder_install }}/gogs/data/gogs.db

[repository]
ROOT = {{ folder_install }}/gogs/gogs-repositories

[server]
DOMAIN           = {{ root_url }}
HTTP_PORT        = 3000
ROOT_URL         = http://{{ root_url }}:{{ root_url_port | default(80)}}/{{ gogs_url_location }}
DISABLE_SSH      = false
SSH_PORT         = 22
START_SSH_SERVER = false
OFFLINE_MODE     = false

[mailer]
ENABLED = false

[service]
REGISTER_EMAIL_CONFIRM = false
ENABLE_NOTIFY_MAIL     = false
DISABLE_REGISTRATION   = false
ENABLE_CAPTCHA         = true
REQUIRE_SIGNIN_VIEW    = false

[picture]
DISABLE_GRAVATAR        = false
ENABLE_FEDERATED_AVATAR = false

[session]
PROVIDER = file

[log]
MODE      = file
LEVEL     = Info
ROOT_PATH = {{ folder_install }}/gogs/log

[security]
INSTALL_LOCK = true
SECRET_KEY   = try

